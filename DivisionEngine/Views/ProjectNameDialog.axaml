<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DivisionEngine.Editor.ProjectNameDialog"
        xmlns:local="using:DivisionEngine.Editor"
        x:DataType="local:ProjectNameDialog"
        Title="Project Name">
  <StackPanel Margin="20" Spacing="15">
        <TextBlock Text="Enter Project Name:" FontSize="14"/>
        <TextBox Text="{Binding ProjectName}" Watermark="MyProject" FontSize="14"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="Cancel" Click="Cancel_Click" Width="80"/>
            <Button Content="OK" Click="Ok_Click" Width="80" IsDefault="True"/>
        </StackPanel>
    </StackPanel>
</Window>
